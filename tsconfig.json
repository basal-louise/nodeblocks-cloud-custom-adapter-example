{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2021"],  	
    "module": "commonjs",	
    "target": "ES2021",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "!src/**/*.(test|spec).ts"
  ]
}